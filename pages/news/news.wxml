<!--pages/news/news.wxml-->
<view class="page">
  <view class="page__bd">
    <view class="weui-panel weui-panel_access" wx:for="{{list}}" wx:key=''>
      <view class="weui-panel__bd">
        <navigator url="../article/article?rid={{item.rId}}" open-type='navigate' class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
            <image class="weui-media-box__thumb" src="{{icon60}}" />
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
            <view class="weui-media-box__title">{{item.rLongTitle}}</view>
            <view class="weui-media-box__desc">{{item.rSummary}}...</view>
            <view class="weui-media-box__info">
              <view class="weui-media-box__info__meta">文字来源</view>
              <view class="weui-media-box__info__meta">{{item.createTime}}</view>
              <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">其它信息</view>
            </view>
          </view>
        </navigator>
      </view>
    </view>
  </view>
</view>


<view>
  <van-tabbar active="{{ active }}" safe-area-inset-bottom="true" bind:change="onChange">
    <van-tabbar-item>
      <image slot="icon" src="../../package/icons/translation3.png" mode="aspectFit" />
      <image slot="icon-active" src="../../package/icons/translation4.png" mode="aspectFit" /> 翻译
    </van-tabbar-item>
    <van-tabbar-item>
      <image slot="icon" src="../../package/icons/earth.png" mode="aspectFit" />
      <image slot="icon-active" src="../../package/icons/earth2.png" mode="aspectFit" /> 新闻</van-tabbar-item>
    <van-tabbar-item>
      <image slot="icon" src="../../package/icons/user.png" mode="aspectFit" bindload='' />
      <image slot="icon-active" src="../../package/icons/user2.png" mode="aspectFit" /> 个人
    </van-tabbar-item>
  </van-tabbar>
</view>